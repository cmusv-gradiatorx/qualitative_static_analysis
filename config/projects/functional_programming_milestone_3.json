{
  "max_file_size": 128000,
  "ignore_patterns": [
    "*.pyc",
    "__pycache__",
    ".git",
    "*.log",
    "node_modules",
    "*.class",
    "target/",
    "build/",
    "dist/",
    "gitignore"
  ],
  "keep_patterns": [
    "*.py",
    "*.md",
    "*.txt",
    "*.yaml",
    "*.yml",
    "*.json",
    "*.scala",
    "*.hs",
    "*.fs",
    "*.f#",
    "*.ml",
    "*.elm",
    "*.clj",
    "*.cljs"
  ],
  "max_parallel_llm": 2,
  "enable_semgrep_analysis": false,
  "semgrep_rules_file": "config/semgrep_rules.yaml",
  "semgrep_timeout": 300
} 